{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components": ["./src/components/index.ts"],
      "@components/ui": ["./src/components/ui/index.ts"],
      "@utils": ["./src/lib/utils/index.ts"],
      "@hooks": ["./src/lib/hooks/index.ts"],
      "@models": ["./src/lib/models/index.ts"],
      "@types": ["./src/lib/types/index.ts"],
      "@context": ["./src/lib/context/index.ts"],
      "@actions": ["./src/lib/actions/index.ts"],
      "@public": ["./public/index.ts"],
      "@constant": ["./src/lib/constant/index.ts"],
      "@validations": ["./src/lib/validation/index.ts"],
      "@api": ["./src/lib/api/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "pageComponents/**/*.ts",
    "pageComponents/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/utils/**/*.ts",
    "lib/**/*.ts",
    "hooks/**/*.ts",
    "src/lib/utils/ConnectDb.ts"
  ],

  "exclude": ["node_modules"]
}
