{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@components": ["/components/index.ts"],
      "@components/ui": ["/components/ui/index.ts"],
      "@utils": ["/lib/utils/index.ts"],
      "@lib": ["/lib/index.ts"],
      "@hooks": ["./hooks/index.ts"],
      "@container": ["./container/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "pageComponents/**/*.ts",
    "pageComponents/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/utils/**/*.ts",
    "lib/**/*.ts",
    "hooks/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
